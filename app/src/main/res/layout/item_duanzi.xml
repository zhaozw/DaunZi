<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_duanzi_text_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                ></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/item_duanzi_text_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"

                android:gravity="center"
                />
        </LinearLayout>

        <TextView

            android:id="@+id/item_duanzi_text_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/item_duanzi_diggLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >

            <ImageView
                android:id="@+id/item_duanzi_diggImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_digg_normal"/>

            <TextView
                android:id="@+id/item_duanzi_diggText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="666"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_duanzi_buryLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/item_duanzi_buryImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bury_normal"/>

            <TextView
                android:id="@+id/item_duanzi_buryText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="666"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_duanzi_shareLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"

            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/item_duanzi_shareImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_more_action_normal"/>

            <TextView
                android:id="@+id/item_duanzi_shareText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="666"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#44CDC0B0"></View>
</LinearLayout>
