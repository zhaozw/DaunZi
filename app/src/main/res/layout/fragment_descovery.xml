<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/discovery_fragment_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorBrown"
        app:tabMode="scrollable"></android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#224d4d4d" />
    <android.support.v4.view.ViewPager
        android:id="@+id/discovery_fragment_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
</LinearLayout>