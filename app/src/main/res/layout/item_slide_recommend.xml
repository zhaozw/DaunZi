<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000"
              android:orientation="vertical"
              android:paddingLeft="50dp"
              android:paddingRight="50dp"
              android:paddingTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_slide_recommend_bigTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:text="精彩图集"
            android:textColor="#aaffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_slide_recommend_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

            <TextView
                android:id="@+id/item_slide_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:textColor="#aaffffff"
                android:textSize="13sp"/>

        </LinearLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="140dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_slide_recommend_image1"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

            <TextView
                android:id="@+id/item_slide_recommend_title1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_gravity="center_vertical"

                android:textColor="#aaffffff"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="140dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_slide_recommend_image2"

                android:layout_width="match_parent"
                android:layout_height="100dp"
               />

            <TextView
                android:id="@+id/item_slide_recommend_title2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_gravity="center_vertical"
                android:textColor="#aaffffff"
                android:textSize="13sp"/>

        </LinearLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="140dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_slide_recommend_image3"

                android:layout_width="match_parent"
                android:layout_height="100dp"
            />

            <TextView
                android:id="@+id/item_slide_recommend_title3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_gravity="center_vertical"
                android:textColor="#aaffffff"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="140dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_slide_recommend_image4"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

            <TextView
                android:id="@+id/item_slide_recommend_title4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="#aaffffff"
                android:textSize="13sp"/>

        </LinearLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="140dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_slide_recommend_image5"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

            <TextView
                android:id="@+id/item_slide_recommend_title5"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="#aaffffff"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>