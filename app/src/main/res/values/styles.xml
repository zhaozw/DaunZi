<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="m_radioBUtton" parent="MyTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@drawable/m_radiobutton_state</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="m_radioBUtton_shouye" parent="m_radioBUtton">
        <item name="android:text">首页</item>
        <item name="android:drawableTop">@drawable/m_button_home</item>
    </style>

    <style name="m_radioBUtton_descovery" parent="m_radioBUtton">
        <item name="android:text">发现</item>
        <item name="android:drawableTop">@drawable/m_button_follow</item>
    </style>


    <style name="m_radioBUtton_count" parent="m_radioBUtton">
        <item name="android:text">账号</item>
        <item name="android:drawableTop">@drawable/m_button_count</item>
    </style>

</resources>
